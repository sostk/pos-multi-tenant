# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation for YAML, JSON, Markdown
[*.{yml,yaml,json,md}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation for JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# 2 space indentation for HTML, CSS, SCSS, LESS
[*.{html,css,scss,less}]
indent_style = space
indent_size = 2

# 4 space indentation for Java
[*.java]
indent_style = space
indent_size = 4

# 2 space indentation for XML
[*.xml]
indent_style = space
indent_size = 2

# Batch files use tabs
[*.{cmd,bat}]
end_of_line = crlf
indent_style = tab

# Shell scripts use 2 spaces
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf
